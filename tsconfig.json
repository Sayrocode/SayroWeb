{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": ["../src/components/*"],
      "lib/*": ["../src/lib/*"],
      "utils/*": ["../src/utils/*"],
      "styles/*": ["../src/styles/*"],
      "theme/*": ["../src/theme/*"],
      "pages/*": ["../src/pages/*"]
    }
  },
  "include": [
    "pages",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
