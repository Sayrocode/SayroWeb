{
  "version": 2,
  "installCommand": "yarn install",
  "buildCommand": "yarn build",
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": [
        "node_modules/.prisma/client/**",
        "node_modules/@prisma/**"
      ]
    },
    "pages/**": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": [
        "node_modules/.prisma/client/**",
        "node_modules/@prisma/**"
      ]
    }
  }
}

